<!DOCTYPE html>
<html lang="en">
<head>

    <% include header.ejs %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<div class="container1">
    <div class="row row-expand">
        <div class="col-md-6">
            <h1>Dateien hochladen</h1>

            <form action="/api/file" method="post" enctype="multipart/form-data">
                <label>Wählen Sie ein Bild aus.
                </label><br>
                <input name="file" type="file" accept="image/*"><br>
                <button>Senden</button>
            </form>
        </div>
        <div class="col-md-6">

                <h1>Mehrere Dateien hochladen</h1>
                <form action="/api/files" method="post" enctype="multipart/form-data">
                    <label>Wählen Sie mehrere Bilder aus
                    </label><br>
                    <input name="files" type="file" accept="image/*" multiple><br>
                    <button>Senden</button>

                </form>

        </div>
    </div>
</div>
<div class="container2">
    <div class="title">
        <h1>Alle Dateien</h1>
        <p>Converted images</p>
        <% for (let img of data) { %>
            <img src="./files/<%= img %>" style="width:50px">
        <% } %>
        <p>Original images</p>
        <% for (let img of original) { %>
            <img src="./files/<%= img %>" style="width:50px">
        <% } %>
    </div>
</div>
<style>

 .col-md-6 {

     padding:35px;
 }

</style>
</body>
</html>